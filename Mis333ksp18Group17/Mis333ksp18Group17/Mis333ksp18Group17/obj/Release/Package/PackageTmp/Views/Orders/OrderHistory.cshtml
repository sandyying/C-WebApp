@model IEnumerable<Mis333ksp18Group17.Models.Order>
@using Mis333ksp18Group17.Controllers;
@{
    ViewBag.Title = "Order History";
}

<h2>Index</h2>

@using (Html.BeginForm())
{

<p class="form-group">
    Payment Method:
    <div class="form-group">
        <label class="radio">@Html.RadioButton("Method", PaymentMethod.All, true) All</label>
        <label class="radio">@Html.RadioButton("Method", PaymentMethod.CreditCard) Credit Card</label>
        <label class="radio">@Html.RadioButton("Method", PaymentMethod.PopcornPoints) Popcorn Point</label>
    </div> <br />
</p>
    <p class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </p>

  
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CancelStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.PaymentMethod)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.CancelStatus)
        </th>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }) |
            @Html.ActionLink("Details", "Details", new { id = item.OrderID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })|
            @Html.ActionLink("Cancel", "Cancellation", new { id = item.OrderID })
        </td>
    </tr>
    }

</table>
