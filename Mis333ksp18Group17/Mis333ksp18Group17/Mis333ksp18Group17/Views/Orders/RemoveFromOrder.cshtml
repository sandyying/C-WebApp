@model IEnumerable<Mis333ksp18Group17.Models.OrderDetail>


@{
    ViewBag.Title = "RemoveFromOrder";
}

<h2>Modify Order Items</h2>

<div>
    @Html.ActionLink("Add Item to Cart", "AddToOrder", "Orders",new { OrderID = Model.First().Order.OrderID }, new { @class = "btn btn-primary" })

</div>


<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoviePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Showing.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoviePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "OrderDetails", new { id = item.OrderDetailID }, null) |
                @Html.ActionLink("Delete", "Delete", "OrderDetails", new { id = item.OrderDetailID }, null)
            </td>
        </tr>
    }

</table>
